.page {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.login-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-top: 100rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.logo {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.title {
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 80rpx;
}

.login-type {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.wechat-login {
  background-color: #07c160;
  color: #fff;
}

.phone-login {
  background-color: #fff;
  color: #333;
  border: 2rpx solid #e0e0e0;
}

.verification-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.verification-input {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 44rpx 0 0 44rpx;
  font-size: 32rpx;
}

.send-code-btn {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #07c160;
  color: #fff;
  border-radius: 0 44rpx 44rpx 0;
  font-size: 28rpx;
}

.disabled {
  background-color: #ccc;
}

.mobile-input {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.agreement {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin: 40rpx 0;
}

.agreement text {
  color: #07c160;
}

.back-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #666;
  margin-top: 30rpx;
}